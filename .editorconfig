# EditorConfig ayuda a mantener estilos de codificaci√≥n consistentes entre distintos editores e IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{java,kt,kts}]
indent_size = 2
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.gradle]
indent_style = space
indent_size = 2
